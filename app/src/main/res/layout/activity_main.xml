<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcomeNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#DD1A0B"
        android:text="Welcome, What do you want access?\n \t\t\tTime table? Todo? or calender"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to give command"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/microphoneCardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/microphoneCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/speakBtn"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/microphone"/>



    </androidx.cardview.widget.CardView>

    <CheckBox
        android:id="@id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_margin="30dp"
        android:text="Use Buttons instead?"
        android:layout_marginBottom="10dp"
        android:textColor="#DD1A0B"
        app:layout_constraintTop_toBottomOf="@id/microphoneCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/timeTableCardView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@id/todoCardView"
        app:layout_constraintTop_toBottomOf="@id/checkbox"
        app:layout_constraintLeft_toLeftOf="parent">

        <LinearLayout
            android:id="@+id/time_table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/time_table"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time table"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/todoCardView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toLeftOf="@id/calenderCardView"
        app:layout_constraintTop_toBottomOf="@id/checkbox"
        app:layout_constraintLeft_toRightOf="@id/timeTableCardView">

        <LinearLayout
            android:id="@+id/todo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/todo_notes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todo"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/calenderCardView"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox"
        app:layout_constraintRight_toLeftOf="@id/notes_card_view"
        app:layout_constraintLeft_toRightOf="@id/todoCardView">

        <LinearLayout
            android:id="@+id/calender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:layout_width="30dp"
                android:background="@drawable/calender_cc"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calender"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/notes_card_view"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/checkbox"
        app:layout_constraintLeft_toRightOf="@id/calenderCardView"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/notes_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:layout_width="30dp"
                android:background="@drawable/note_pad"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note Pad"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/keyWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key Word"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>